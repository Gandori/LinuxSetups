# nano config by gandori 

include $HOME/linux_setups/nano/syntax/*

set linenumbers
set autoindent
set smooth
set mouse
set softwrap
set tabsize 4
set boldtext
set constantshow
set morespace
set brackets ""')]}"
set matchbrackets "(<[{)>]}"
set quotestr "^([]*([!#%:;>|}]|//))+"
set whitespace ">."
set zap

set titlecolor black,cyan
set numbercolor black,cyan
set functioncolor black,cyan
set keycolor black,cyan
set statuscolor black,cyan
set selectedcolor black,white
set errorcolor red
set nohelp

unset backup
unset historylog
unset nonewlines
unset tempfile
